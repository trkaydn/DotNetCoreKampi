@model AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yazar Kaydı</h4>
            <br />
            @using (Html.BeginForm("WriterAdd", "Writer", FormMethod.Post, new { @class = "forms-sample", enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.WriterID)
                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>E-Posta</label>
                    @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Şifre (Tekrar)</label>
                    @Html.PasswordFor(x => x.WriterPasswordConfirm, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterPasswordConfirm, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Fotoğraf Yükle</label>
                    <input type="file" name="WriterImage" class="form-control file-upload-info" placeholder="Fotoğraf Yükle">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkımda</label>
                    @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <a href="@Url.Action("Index","Dashboard")" class="btn btn-light">İptal</a>
            }
        </div>
    </div>
</div>



