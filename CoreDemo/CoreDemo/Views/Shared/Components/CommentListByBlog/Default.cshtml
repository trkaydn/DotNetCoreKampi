@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() < 1)
    {
        <h4 style="text-align:center;">Henüz hiç yorum yapılmamış.<br />İlk yorumu siz yazın!</h4>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <p style="float:right;"><small>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</small></p>
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.CommentContent
                    </p>
                </div>
            </div>
            <br />
        }
    }
</div>