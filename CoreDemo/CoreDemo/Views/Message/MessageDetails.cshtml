@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>
<br />
@Html.Label("Mesaj ID")
@Html.TextBoxFor(x => x.MessageID, new { @class = "form-control", disabled = "disabled" })

<br />
@Html.Label("Konu")
@Html.TextBoxFor(x => x.Subject, new { @class = "form-control", disabled = "disabled" })
<br />

@Html.Label("Mesaj")
@Html.TextAreaFor(x => x.MessageDetails,3,10, new { @class = "form-control", disabled = "disabled" })
<br />

<a href="/Message/Inbox" class="btn btn-warning">Mesajlara Dön</a>
