@model RegisterCityViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad Soyad:</label>
                            @Html.TextBoxFor(x => x.Writer.WriterName, new { @class = "form-control", placeholder = "Ad Soyad" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Posta</label>
                            @Html.TextBoxFor(x => x.Writer.WriterMail, new { @class = "form-control", placeholder = "E-Posta" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterMail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @Html.TextBoxFor(x => x.Writer.WriterPassword, new { @class = "form-control", placeholder = "Şifre" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre (Tekrar)</label>
                            @Html.TextBoxFor(x => x.Writer.WriterPasswordConfirm, new { @class = "form-control", placeholder = "Şifre (Tekrar)" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterPasswordConfirm, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @* Görsel dosya yolu ileride kaldırılacaktır. *@
                            <label for="validationCustom01">Görsel Dosya Yolu:</label>
                            @Html.TextBoxFor(x => x.Writer.WriterImage, new { @class = "form-control", placeholder = "Görsel Dosya Yolu" })
                            @Html.ValidationMessageFor(x => x.Writer.WriterImage, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şehir</label>
                                @Html.DropDownList("city", Model.Cities, "Şehir Seçin", new { @class = "form-control" })          
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1"><strong>Tüm şartları okudum ve onaylıyorum.</strong></a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>
