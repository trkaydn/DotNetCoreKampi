@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesaj Oluştur
                </h2>
            </div>
            <form method="post" action="/Admin/AdminMessage/ComposeMessage">

            <div class="mail-box">
                <div class="mail-body">

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Alıcı:</label>

                            <div class="col-sm-10"><input type="text" class="form-control" name="alicimail"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Konu:</label>
                                <div class="col-sm-10"><input type="text" class="form-control" name="subject"></div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesaj:</label>

                            <div class="col-sm-10"><textarea name="detail" class="form-control"></textarea></div>
                        </div>

                </div>

                <div class="mail-body text-right tooltip-demo">
                    <button type="submit" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Gönder"><i class="fa fa-reply"></i> Gönder</button>
                    <a href="/Admin/AdminMessage/Sendbox" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="İptal"><i class="fa fa-times"></i> İptal</a>
                </div>
                <div class="clearfix"></div>

            </div>
            </form>

        </div>
    </div>
</div>
