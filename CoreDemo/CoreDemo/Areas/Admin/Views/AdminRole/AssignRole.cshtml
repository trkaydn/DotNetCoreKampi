@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId">
            <input type="hidden" asp-for="@Model[i].Name">
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check">
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn btn-info">Değişiklikleri Kaydet</button>
    <a href="/admin/adminrole/UserRoleList" class="btn btn-outline-warning">Kullanıcı listesine dön</a>
</form>